@model bookrepositoryprogram.Models.book;

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="container m-3">
    <h2>Edycja Ksiązki</h2>
    <form asp-action="Edit" method="post">
        <input asp-for="Id" readonly />

        <label asp-for="Title">Tytuł</label>
        <input class="form-control" asp-for="Title" />

        <label asp-for="Author">Autor</label>
        <input class="form-control" asp-for="Author" />

        <label asp-for="PublishingYear">Rok wydania</label>
        <input class="form-control" asp-for="PublishingYear" />

        <label asp-for="Price">Cena</label>
        <input class="form-control" asp-for="Price" />


        <button class="btn btn-primary">Zapisz zmiany</button>
    </form>
</div>